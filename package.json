{
  "name": "@altas/root",
  "description": "Altas - Risk/Reputation Engine for the Web",
  "devDependencies": {
    "@altas/lint": "workspace:*",
    "@altas/tsconfig": "workspace:*",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2"
  },
  "packageManager": "pnpm@8.9.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 20",
    "----------- CHECKS -----------": "",
    "checks": "turbo lint format typecheck test --continue",
    "checks:fix": "turbo lint:fix format:fix  --continue",
    "----------- TESTING -----------": "",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "postinstall": "husky install",
    "syncpack": "syncpack",
    "studio": "turbo start:studio"
  }
}
